{
    "compilerOptions": {
        "sourceMap": true, // Ensure source maps are generated
        "skipLibCheck": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "jsx": "react-jsx",
        "lib": ["dom", "esnext"],
        "types": ["vite/client"],  
    },
    "include": ["src", "tests"],
    "exclude": ["node_modules", "dist"]
}
